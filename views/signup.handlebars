<div>
    <section class="box">
      <h2 class="is-size-3">Sign Up</h2>
      <form class="signup-form field">
        <div class="control">
          <label for="username-signup">Username:</label>
          <input class="input" type="text" id="username-signup" placeholder="username" />
        </div>
        <div class="control">
          <label for="password-signup">Password:</label>
          <input class="input" type="password" id="password-signup" placeholder="password" />
        </div>
        <div class="control">
          <button class="button is-info" type="submit" id="signup-btn">Sign Up</button>
        </div>
      </form>
      <a href="/login">Already have an account? Login!</a>
    </section>
</div>

